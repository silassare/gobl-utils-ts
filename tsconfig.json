{
	"compilerOptions": {
		"outDir": "dist/esm",
		"declarationDir": "types/",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"declaration": true,
		"declarationMap": true,
		"inlineSources": true,
		"inlineSourceMap": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"removeComments": false, // keep comment like /* @__PURE__ */  required for tree shaking to work as expected
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"preserveSymlinks": true
	},
	"include": ["src/**/*"]
}
